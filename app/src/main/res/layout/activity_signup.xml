<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center">
    </TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUp"
        android:background="#30ffffff"
        android:hint="Username"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/icon3"
        android:drawablePadding="20dp">
    </EditText>

    <EditText
        android:id="@+id/passwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:background="#30ffffff"
        android:hint="E-Mail"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/icon1"
        android:drawablePadding="20dp"
        android:inputType="textEmailAddress"
        tools:ignore="RtlHardcoded">
    </EditText>

    <EditText
        android:id="@+id/kicep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwo"
        android:background="#30ffffff"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/icon2"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        tools:ignore="RtlHardcoded">
    </EditText>

    <EditText
        android:id="@+id/HAH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kicep"
        android:background="#30ffffff"
        android:hint="Re-Password"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/icon2"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        tools:ignore="RtlHardcoded">
    </EditText>

    <Button
        android:id="@+id/Registasibtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HAH"
        android:layout_margin="10dp"
        android:textColorHint="@color/white"
        android:hint="REGISTER" />

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Registasibtn"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Choose Account"
        android:textColor="@color/white"
        android:textSize="20sp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/socialicons"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/img" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/facebo"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/xtwitt" />
    </LinearLayout>
</RelativeLayout>